{
    "manifest_version": 3,
    "name": "ED Ans",
    "version": "1.0",
    "permissions": ["activeTab", "tabs", "storage", "cookies", "webRequest"],
    "host_permissions": ["https://*.engdis.com/*"],
    "content_scripts": [{
        "matches": [
            "https://*.engdis.com/*"
        ],
        "run_at": "document_idle",
        "js": ["content.js"],
        "css":["content.css"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open EDAns Repository"
    }
}